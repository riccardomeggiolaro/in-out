# Sync Manager Environment Variables
# Copy this file to .env and configure for your environment

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4
DEBUG=false

# Database
# For SQLite (default)
DATABASE_URL=sqlite+aiosqlite:///./data/sync_manager.db

# For PostgreSQL (production)
# DATABASE_URL=postgresql+asyncpg://syncuser:password@localhost/sync_manager

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/sync_manager.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5
ACCESS_LOG=true

# Sync Settings
DEFAULT_SYNC_INTERVAL=5
MAX_RETRIES=3
RETRY_DELAY=10
BATCH_SIZE=100
FILE_WATCH_DELAY=0.5

# Paths
DATA_DIR=./data
TEMP_DIR=/tmp/sync_manager

# Security
SECRET_KEY=change-this-secret-key-in-production-use-a-long-random-string
API_KEY_ENABLED=false
API_KEY=your-secure-api-key-here

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Monitoring
ENABLE_METRICS=true
ENABLE_HEALTH=true
METRICS_PORT=9090

# WebSocket
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=100

# Performance
MAX_WORKERS_PER_SYNC=5
CHUNK_SIZE=8192

# Cloud Storage - AWS S3
ENABLE_S3=false
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# Cloud Storage - Azure Blob
ENABLE_AZURE=false
AZURE_STORAGE_CONNECTION_STRING=

# Cloud Storage - Google Cloud Storage
ENABLE_GCS=false
GCS_CREDENTIALS_PATH=

# Docker Compose Specific
LOCAL_SYNC_DIR=/opt/sync/local
NETWORK_SYNC_DIR=/opt/sync/network

# PostgreSQL (for production profile)
POSTGRES_PASSWORD=changeme

# Grafana (for monitoring profile)
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin
